                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "has_equipment",
                    "domain": "hand",
                    "subject": "other",
                    "value": "iron_ingot"
                  },
                  {
                    "test": "is_missing_health",
                    "value": true
                  }
                ]
              }
            },
