{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "us:phalanx_shell",
      "is_experimental": false,
      "is_spawnable": false,
      "is_summonable": true,
      "runtime_identifier": "minecraft:arrow",
      "animations": {
        "shell": "animation.shell_flying",
        "inwater": "controller.animation.shell_inwater"
        // "hit": "animation.shell_hit",
      },
      "scripts": {
        "animate": [
          "shell",
          "inwater"
          // {"hit": "query.variant == 1"}
        ]
      }
    },

    // reference for minecraft:projectile:
    // https://learn.microsoft.com/en-us/minecraft/creator/reference/content/entityreference/examples/entitycomponents/minecraftcomponent_projectile?view=minecraft-bedrock-stable

    "component_groups":     {
      "instant_despawn": {
        "minecraft:instant_despawn": {}
      },

      // unused now
      "hit": {
        "minecraft:variant": {"value": 1}
      },

      // unused now
      "minecraft:exploding": {
        // https://learn.microsoft.com/en-us/minecraft/creator/reference/content/entityreference/examples/entitycomponents/minecraftcomponent_explode?view=minecraft-bedrock-stable
        "minecraft:explode": {
          "causes_fire": false,
          "breaks_blocks": false,
          "destroy_affected_by_griefing": false,
          "fire_affected_by_griefing": false,
          "fuse_length": -1,
          "fuse_lit": true,
          "power": 0
        }
      },

      // unused now
      "normal2": {
        "minecraft:projectile": {
          "catch_fire": false,
          "destroy_on_hurt": false,
          "gravity": 0.002,
          "inertia": 0.99,
          "liquid_inertia": 0.90,
          "anchor": 2,
          "offset": [   //"...from the entity's anchor where the projectile will spawn."
            0,
            0,
            0
          ],
          "particle": "explode",
          "uncertainty_base": 2,
          "power": 4.5,
          "reflect_on_hurt": false,
          "semi_random_diff_damage": false,
          "on_hit": {                   // was "onHit" (incorrect?)
            "definition_event": {
              "affect_projectile": true,
              "event_trigger": {
                "event": "hit",
                "target": "self"
              }
            },
            "impact_damage": {
              "damage": 10,
              "knockback": true,
              "destroy_on_hit": true
            },
            "mob_effect": {
              "amplifier": 1,
              "duration": 5,
              "effect": "wither"
            },
            "arrow_effect": {
              "apply_effect_to_blocking_targets": false
            }
          }
        },
        "minecraft:timer": {
          "looping": false,
          "time": 7,
          "time_down_event": {
            "event": "despawn",
            "target": "self"
          }
        }
      }
    },
    

    "components": {
      "minecraft:type_family": {
        "family": ["anti-aircraft", "phalanx_shell"]
      },
      "minecraft:variant": {
        "value": 0
      },
      "minecraft:collision_box": {
        "height": 0.2, // MRxSIR: -0.2 to 0.2
        "width": 0.25
      },
      "minecraft:scale": {
        "value": 2.1
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": false
        }
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      },

      "minecraft:projectile": {
        "catch_fire": false,
        "destroy_on_hurt": false,
        "gravity": 0.002,
        "inertia": 0.99,
        "liquid_inertia": 0.90,
        "anchor": 2,
        "offset": [
          0,
          0.15,
          0
        ],
        "particle": "explode",
        "uncertainty_base": 1,
        "power": 4.5,
        "reflect_on_hurt": false,
        "semi_random_diff_damage": false,
        "on_hit": {
          "definition_event": {
              "affect_projectile": true,
              "event_trigger": {
                "event": "hit",
                "target": "self"
              }
            },
          "impact_damage": {
            "damage": 10,
            "knockback": true,
            "semi_random_diff_damage": false,
            "destroy_on_hit": false //event "hit" handles this
          },
          "arrow_effect": {
            "apply_effect_to_blocking_targets": false
          }
        }
      },

      "minecraft:timer": {
        "looping": true,  //true in case it isn't effective the first time
        "time": 7,
        "time_down_event": {
          "event": "despawn",
          "target": "self"
        }
      },

      "minecraft:despawn": {
        "despawn_from_distance": {
          "min_distance": 150, 
          "max_distance": 150
        }
      }
    },

    
    "events": {
      "despawn": {
        "add": {"component_groups": ["instant_despawn"]}  //instant despawn
      },

      "hit": {
        "sequence": [
          {
            "queue_command": {"command": [
              "particle shell:hit ~ ~0.1 ~",
              "particle shell:hit2 ~ ~0.1 ~",
              "particle shell:hit3 ~ ~0.1 ~",
              "playsound shell.hit @a[r=30]",
              "playsound shell.damage @a[tag=bb63,r=100]"
            ]}
          },
          {
            "add": {"component_groups": ["instant_despawn"]}
          }
        ]
      }
    }
  }
}